{
  "name": "ai-manager",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@types/node": "^20.11.30",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  }
}
